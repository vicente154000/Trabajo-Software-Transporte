<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores base -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorPrimary">@color/accent_orange</item>
        <item name="colorPrimaryVariant">@color/accent_orange</item>
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorSurface">@color/dark_surface</item>

        <!-- Barras del sistema -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Componentes -->
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
    </style>

    <!-- Estilo para botones -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="MyEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_orange</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilo para Toolbar -->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/dark_surface</item>
        <item name="titleTextColor">@color/text_white</item>
    </style>
</resources>
